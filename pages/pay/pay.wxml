<!--pages/pay/pay.wxml-->
<view class="pay1">
  <view class="pay1v"><image src="{{userInfo.avatarUrl}}" class="imgF"></image></view>
  <view class="pay1v">{{userInfo.nickName}}</view>
  <view class="pay1v2">{{month}}月{{day}}日</view>
</view>
<view class="pay2">
  <view class="pay2v1"> 手机号
    <text style="color:red">*</text>
  </view>
  <view class="pay2v1">
    <input class="payInputt"  bindinput="getNumber" placeholder="请填写手机号"  maxlength="16" focus="true"/>
  </view>
</view>
<view class="pc1"></view>
<view class="pay3">
  <view class="pay3v1">
      <view class="pay3v1v">
        <image src="{{detail.sI}}" class="imgPay"></image>
      </view>
      <view class="pay3v1v">
        <view class="name">{{detail.storyTitle}}</view>
        <view class="color"><image src="../img/t.png" style="width:28rpx;height:26rpx;margin-right:10rpx"></image>{{detail.playTime}}</view>
        <view class="price">价格：<text style="color:red;font-size:40rpx;">{{detail.groupPrice}}元</text></view>
      </view>
  </view>
  <view class="pay3v2 color">
    <image src="../img/l.png" style="width:30rpx;height:30rpx;margin-right:10rpx"></image>{{detail.shopAddress}}
  </view>
</view>
<view class="pc2"></view>
<view class="pay5">
  <view style="float:left">鸽屎（共{{total}}个）</view>
  <view class="pimg" bindtap="changeShow">
    <image src="../img/ri.png" style="width:50rpx;height:50rpx"></image>
  </view>
</view>
<view class="6" wx:if="{{useGeshi}}">
  <view style="float:right;margin-right:-30rpx">
    折扣：-￥{{useGeshi*10}}
  </view>
</view>
<view class="pay4">
  <view class="pay4v1">总金额：<text style="color:red;font-size:40rpx;">{{detail.groupPrice-useGeshi*10}}元</text></view>
  <view class="pay4v2">
    <!-- <button  class="pay4b" bindtap="pay">提交订单</button> -->
    <button class="pay4b" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">提交订单</button>
  </view>
</view>
<loading hidden="{{onOff}}">加载中...</loading>
<view class="geshi" wx:if="{{show}}">
  <view class="geshi1"> 
    <view class="g1">
      <view>鸽屎</view>
      <view bindtap="tapDialogButton">使用规则</view>
    </view>
    <view class="g2">
      <view>账户鸽屎数量：{{total}}</view>
      <view bindtap="noUse">本单暂不使用鸽屎</view>
    </view>
    <view class="g3">
      <view class="g31" wx:for="{{num}}" wx:key="unique">
        <view>抵扣<text>{{(item.value+1)*10}}</text>元，使用{{(item.value+1)*1000}}鸽屎</view>
        <radio-group bindchange="radioChange">
          <view class="weui-cell__hd">
            <radio value="{{item.value}}" checked="{{item.checked}}" disabled="{{item.disabled}}"/>
          </view>
        </radio-group>
      </view>
    </view>
    <view class="g4">
      <button style="background:rgb(245,134,49);color:white;margin-top:20rpx" bindtap="changeShow">确定</button>
    </view>
  </view>
</view>
<mp-dialog title="鸽屎使用规则" show="{{showOneButtonDialog}}" bindbuttontap="tapDialogButton" buttons="{{oneButton}}">
        <view>test content1</view>
</mp-dialog>
